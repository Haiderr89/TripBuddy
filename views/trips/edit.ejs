<%- include('../partials/head') %>

<body class="containerNew">

  <div class="container">
<br><br><br>
    <div class="image">

        <form action="/users/<%= user._id %>/trips/<%= trip._id %>?_method=PUT" method="POST">


        <h1 class="mb-4">Editing <%= trip.country %></h1>

        <div class="mb-3 w-50 div1">
          <div>

            <label class="form-label">Country:</label>
            <input type="text" name="country" class="form-control" required id="country" value="<%= trip.country %>">
          </div>

          <div>
            <label class="form-label">Rating (Between 0 - 5):</label>
            <input type="number" name="rating" class="form-control" min="0" max="5" step="0.1" value="<%= trip.rating %>">
          </div>
        </div>


        <div class="mb-3 w-50">
            <div>
                <label class="form-label">Activities:</label>
                <input type="text" name="activities" class="form-control" value="<%= trip.activities %>">
              </div>


        </div>

        <div class="mb-3 w-50 ">
          <label class="form-label">Image URL:</label>
          <input type="url" name="image" class="form-control" value="<%= trip.image %>">
        </div>

        <div class="mb-3 w-50 div1">
          <div>
            <label class="form-label">Best Season:</label>
            <select name="bestSeason" class="form-select">
              <option value="" disabled>Select season</option>
              <option value="Spring" <%= trip.bestSeason === 'Spring' ? 'selected' : '' %>>Spring</option>
              <option value="Summer" <%= trip.bestSeason === 'Summer' ? 'selected' : '' %>>Summer</option>
              <option value="Fall" <%= trip.bestSeason === 'Fall' ? 'selected' : '' %>>Fall</option>
              <option value="Winter" <%= trip.bestSeason === 'Winter' ? 'selected' : '' %>>Winter</option>
            </select>
          </div>
          
          <div>
            <label class="form-label">Status:</label>
            <select name="status" class="form-select" required>
              <option value="" disabled>Select status</option>
              <option value="Visited" <%= trip.status === 'Visited' ? 'selected' : '' %>>Visited</option>
              <option value="Want to visit" <%= trip.status === 'Want to visit' ? 'selected' : '' %>>Want to visit</option>
            </select>
          </div>
          
          <div>
            <label class="form-label">Budget:</label>
            <select name="budget" class="form-select">
              <option value="" disabled>Select budget</option>
              <option value="High" <%= trip.budget === 'High' ? 'selected' : '' %>>High</option>
              <option value="Medium" <%= trip.budget === 'Medium' ? 'selected' : '' %>>Medium</option>
              <option value="Low" <%= trip.budget === 'Low' ? 'selected' : '' %>>Low</option>
            </select>
          </div>
          
        </div>

        <div class="mb-3 w-50">
          <label class="form-label">Notes:</label>
          <textarea name="description" class="form-control" rows="3"><%= trip.description %></textarea>
        </div>        

        <button type="submit" class="btn btn-warning">Update!</button>
        <br>
        <a href="/users/<%= user._id %>/trips/<%= trip._id %>/show" class="btn btn-secondary">Back</a>

       
        <br>
      </form>
    </div>
    
  </div>
  

</body>

<%- include('../partials/footer') %>